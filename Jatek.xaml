<Window x:Class="Ulti.Jatek"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        Width="900"
        Height="520"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <!-- ===== STÍLUSOK ===== -->
    <Window.Resources>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#3A7AFE"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Padding" Value="6,2"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#3A7AFE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2F66D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <!-- ===== FŐ KERET ===== -->
    <Border Background="#2B2B2B"
            CornerRadius="16"
            Padding="20"
            Margin="20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===== FEJLÉC ===== -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="ULTI – JÁTÉK"
                               FontSize="22"
                               FontWeight="Bold"/>
                    <TextBlock x:Name="KorText" Text="Aktuális kör: 1"
                               Foreground="#AAAAAA"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="X"
                        Width="30"
                        Height="30"
                        Background="#AA3333"
                        BorderBrush="black"
                        Click="Close_Click" FontSize="20" FontFamily="Yu Gothic"/>
            </Grid>

            <!-- ===== TARTALOM ===== -->
            <Grid Grid.Row="1" Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- JÁTÉKOS 1 -->
                <Border Background="#3A3A3A"
                        CornerRadius="10"
                        Padding="12"
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="Játékos 1"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Pont: 0"/>
                    </StackPanel>
                </Border>

                <!-- JÁTÉKOS 2 -->
                <Border Grid.Column="1"
                        Background="#3A3A3A"
                        CornerRadius="10"
                        Padding="12"
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="Játékos 2"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Pont: 0"/>
                    </StackPanel>
                </Border>

                <!-- JÁTÉKOS 3 -->
                <Border Grid.Column="2"
                        Background="#3A3A3A"
                        CornerRadius="10"
                        Padding="12"
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="Játékos 3"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Pont: 0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ===== ALSÓ VEZÉRLÉS ===== -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Bemondás"/>
                    <ComboBox x:Name="Bemondas_ComboBox" Background="Gray" Foreground="Black">
                        <ComboBoxItem Content="Passz"/>
                        <ComboBoxItem Content="Ulti"/>
                        <ComboBoxItem Content="Betli"/>
                        <ComboBoxItem Content="Durchmars"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Aktív játékos"/>
                    <ComboBox x:Name="Jatekosok_Combobox" Foreground="Black"/>
                </StackPanel>

                <StackPanel Grid.Column="2"
            HorizontalAlignment="Right">
                    <Button Content="Kör indítása"
            Click="KorInditas_Click"/>
                    <Button Content="Pontozás"
            Margin="0,8,0,0"
            Click="Pontozas_Click"/>
                </StackPanel>

                <Label x:Name="Pontszam" Content="Pont: 0" Margin="17,24,17,38" Grid.Column="2" Foreground="White"/>

            </Grid>
        </Grid>
    </Border>
</Window>
