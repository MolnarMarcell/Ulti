<Window x:Class="Ulti.Jatek"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ulti"
        mc:Ignorable="d"
        Title="Játék"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">

    <!-- KELL háttér, különben hover nem megbízható -->
    <Grid Background="#2B2B2B">

        <!-- ===== BEMONDÁS ===== -->
        <Label Content="Bemondás:"
               Foreground="White"
               Margin="109,105,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"/>

        <ComboBox x:Name="Bemondas_ComboBox"
                  Width="120"
                  Margin="182,107,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"/>

        <!-- ===== JÁTÉKOS ===== -->
        <ComboBox x:Name="Jatekosok_Combobox"
                  Width="120"
                  Margin="572,107,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"/>

        <!-- ===== OK GOMB ===== -->
        <Button x:Name="Mentes_Gomb"
                Content="OK"
                Width="70"
                Height="50"
                Margin="550,261,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Mentes_Gomb_Click"/>

        <!-- ===== KIÍRÁS ===== -->
        <Label x:Name="Bug_fix"
               Content="Kiírja a JÁTÉKOT"
               Foreground="White"
               Margin="124,263,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Width="210"/>

        <!-- ===== INFO ZÓNA (EZ A LÉNYEG) ===== -->
        <Grid HorizontalAlignment="Right"
              VerticalAlignment="Top"
              Margin="0,10,10,0">

            <!-- INFO GOMB -->
            <Button Content="?"
                    Width="30"
                    Height="30"
                    FontSize="16"
                    FontWeight="Bold"
                    Cursor="Hand" MouseEnter="Button_MouseEnter"/>

            <!-- INFO KÉP -->
            <Image x:Name="InfoImage"
                   Source="/Images/info.png"
                   Width="200"
                   Height="200"
                   Margin="0,35,0,0"
                   Visibility="Collapsed"
                   Panel.ZIndex="10"/>

            <!-- HOVER LOGIKA: A TELJES ZÓNÁRA -->


        </Grid>
        <!-- ===== INFO ZÓNA VÉGE ===== -->

    </Grid>
</Window>
